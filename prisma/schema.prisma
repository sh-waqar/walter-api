generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  balance  Float?   @default(dbgenerated())
  color    String
  currency String
  id       Int      @default(dbgenerated()) @id
  name     String
  userId   Int?
  user     User?    @relation(fields: [userId], references: [id])
  records  Record[]
}

model Category {
  expenseType String
  icon        String?
  id          Int      @default(autoincrement()) @id
  name        String
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
  records     Record[]
}

model Record {
  accountId   Int
  amount      Float?   @default(dbgenerated())
  categoryId  Int
  description String?  @default("")
  id          Int      @default(dbgenerated()) @id
  account     Account  @relation(fields: [accountId], references: [id])
  category    Category @relation(fields: [categoryId], references: [id])
}

model User {
  email      String     @unique
  id         Int        @default(autoincrement()) @id
  name       String     @default("")
  password   String     @default("")
  accounts   Account[]
  categories Category[]
}